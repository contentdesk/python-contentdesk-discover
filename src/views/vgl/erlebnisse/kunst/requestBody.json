{
    "name": "VGL Erlebnisse - Kunst",
    "description": "VGL Erlebnisse - Kunst Objekte",
    "scheduleStrategy": "Daily",
    "searchRequest": {
            "project": [
                "{{project}}"
            ],
            "facets": [
                {
                    "name": "containedInPlace/id",
                    "responseNames": {
                        "de": "Ferienregion",
                        "en": "vacation area"
                    },
                    "filterValues": ["ds_braunwald_toedigebiet", "ds_elm_sernftal", "ds_glarus_kloental", "ds_glarusnord_walensee", "ds_grosstal_mettmen"],
